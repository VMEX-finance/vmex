{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "es2020",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
    "skipLibCheck": true
  },
  "include": [
    "artifacts/*",
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.d.ts"
]
}
