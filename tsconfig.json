{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": [
    "./src.ts/*/*", 
    "./src.ts/*", 
    "./test", 
    "./artifacts"
  ],
  "exclude": [
    "**/test-suites/**/*",
    "**/markets/**/*",
    "**/modules",
    "**/tasks"
  ],
  
}
