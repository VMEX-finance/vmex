{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "es2020",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "artifacts",
  ]
}
