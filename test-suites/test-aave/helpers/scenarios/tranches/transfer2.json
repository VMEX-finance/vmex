{
    "title": "LendingPool: Transfer test 2",
    "description": "Test cases for the transfer function",
    "stories": [
      {
        "description": "User 0 deposits 300 DAI (risk 0) in all three tranches",
        "actions": [
          {
            "name": "mint",
            "args": {
              "reserve": "DAI",
              "amount": "1000",
              "user": "0"
            },
            "expected": "success"
          },
          {
            "name": "approve",
            "args": {
              "reserve": "DAI",
              "user": "0"
            },
            "expected": "success"
          },
          {
            "name": "deposit",
            "args": {
              "reserve": "DAI",
              "tranche": "0",
              "amount": "300",
              "user": "0"
            },
            "expected": "success"
          },
          {
            "name": "deposit",
            "args": {
              "reserve": "DAI",
              "tranche": "1",
              "amount": "300",
              "user": "0"
            },
            "expected": "success"
          },
          {
            "name": "deposit",
            "args": {
              "reserve": "DAI",
              "tranche": "2",
              "amount": "300",
              "user": "0"
            },
            "expected": "success"
          }
        ]
      },
      {
        "description": "user 0 transfers 300 dai from tranche 2 to tranche 1. isCollateral parameter shouldn't affect anything since it only works if it's the first deposit in a reserve",
        "actions": [
          {
            "name": "transfer",
            "args": {
                "reserve": "DAI",
                "originTranche": "2",
                "destTranche": "1",
                "isCollateral": "true", 
                "amount": "300",
                "user": "0"
            },
            "expected": "success"
        }
        ]
      },
      {
        "description": "user 0 transfers 600 dai from tranche 1 to tranche 0. isCollateral parameter shouldn't affect anything since it only works if it's the first deposit in a reserve",
        "actions": [
            {
                "name": "transfer",
                "args": {
                    "reserve": "DAI",
                    "originTranche": "1",
                    "destTranche": "0",
                    "isCollateral": "true", 
                    "amount": "600",
                    "user": "0"
                },
                "expected": "success"
            }
        ]
      },
      {
        "description": "user 0 transfers 000 dai from tranche 0 to tranche 2. isCollateral parameter will make a difference now",
        "actions": [
            {
                "name": "transfer",
                "args": {
                    "reserve": "DAI",
                    "originTranche": "0",
                    "destTranche": "2",
                    "isCollateral": "true", 
                    "amount": "900",
                    "user": "0"
                },
                "expected": "success"
            }
        ]
      }
      

    ]
  }
  